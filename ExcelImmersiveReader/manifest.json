{
  "manifest_version": 3,
  "name": "Excel Page Viewer",
  "version": "1.4",
  "description": "Экспорт веб-страниц в Excel для просмотра и автоматизации",
  "permissions": ["activeTab", "scripting", "downloads", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["readability.js", "content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["readability.js", "preview.html", "preview.js", "reader.css"],
      "matches": ["<all_urls>"]
    }
  ]
}